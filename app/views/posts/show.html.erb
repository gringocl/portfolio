<div class="row">
  <section id="post" class="skin-secondary clearfix">
    <p id="notice"><%= notice %></p>

    <p id="author"> <strong>By:</strong>
      <%= @post.author.email %>
    </p>

    <p><strong>Title:</strong>
      <%= @post.title %>
    </p>

    <p><strong>Body:</strong>
      <%= @post.body %>
    </p>

    <p id="status"><b>Status:</b>
      <%= @post.published? ? "Published" : "Unpublished" %>
    </p>

    <p id="comments"><b>Comments:</b>
      <%= render @post.comments %>
      <% if policy(@post.comments).create? %>
        <%= link_to 'Add Comment', new_post_comment_path(@post), id: "add_comment", remote: true  %>
      <% end %>
    | <% if policy(@post).update? %>
        <%= link_to 'Edit Post', edit_post_path(@post), id: "edit_comment"  %>
      <% end  %>
      <%= link_to 'Back', posts_path %>
    </p>
  </section>
</div>
